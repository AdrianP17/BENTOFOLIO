---

export interface Props {
    title: string;
    description: string;
    image: ImageMetadata;
}
import Image from 'astro/components/Image.astro';
const { title, description, image } = Astro.props;
---

<a href="/" class="group h-auto py-4 first-of-type:border-t-0 border-t border-secondary">
    <div class="flex items-center justify-between mb-4">
        <h3 class="text-2xl font-medium">{title}</h3>
        <svg class=" scale-0 group-hover:scale-100 transition-all duration-300" width="15" height="16" viewBox="0 0 15 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M0.321051 14.9014C-0.0174173 14.5629 -0.0174173 14.0141 0.321051 13.6758L11.8416 2.15518H4.40054C3.92189 2.15518 3.53387 1.76715 3.53387 1.28851C3.53387 0.809868 3.92189 0.421844 4.40054 0.421844H13.9339C14.1637 0.421844 14.3842 0.513157 14.5468 0.675691C14.7092 0.838226 14.8005 1.05865 14.8005 1.28851V10.8219C14.8005 11.3005 14.4124 11.6885 13.9339 11.6885C13.4553 11.6885 13.0672 11.3005 13.0672 10.8219V3.38084L1.54669 14.9014C1.20824 15.2398 0.659501 15.2398 0.321051 14.9014Z" fill="#FEFFF9"/>
        </svg>
    </div>
    <div class="overflow-hidden max-h-0 group-hover:max-h-[400px] transition-all duration-700 ease-in-out">
        <Image loading={"eager"} src={image} alt={title} class="w-full object-cover rounded-xl" />
    </div>
</a>